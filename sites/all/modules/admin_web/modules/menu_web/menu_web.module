function checkUrl($file, $fallback)
{
	$curl = curl_init($file);
	curl_setopt($curl, CURLOPT_NOBODY, true);
	$result = curl_exec($curl);
	if ($result !== false)
	{
		$statusCode = curl_getinfo($curl, CURLINFO_HTTP_CODE);
		if ($statusCode != 200)
			return $fallback;
		else
			return $file;
	}
	else
	{
		return $fallback;
	}
}